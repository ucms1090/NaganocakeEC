<div class="container">
  <div class="row py-4">
    <h5>注文履歴一覧</h5>
  </div>

  <div class="row">
    <table class="table" border="1">

      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.postal_code %><br><%= order.postal_address %><br><%= order.postal_name %></td>

            <td>
              <% @order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>

          <td><%= order.billing_amount %></td>
          <td><%= order.order_status_i18n %></td>
          <td>
            <%= link_to order_path(order.id) do %>
              <button class="btn btn-primary">表示する</button>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>


