<h1>Public::Orders#index</h1>
<p>Find me in app/views/public/orders/index.html.erb</p>

<p>注文履歴一覧</p>

<table>

  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.postal_code %><br><%= order.postal_address %><br><%= order.postal_name %></td>
      <td></td>
      <td><%= order.billing_amount %></td>
      <td><%= order.order_status %></td>
      <td><%= link_to '表示する', order_path(order.id)%></td>
    </tr>
    <% end %>
  </tbody>

</table>