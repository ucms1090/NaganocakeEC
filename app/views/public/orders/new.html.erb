<h1>Public::Orders#new</h1>
<p>Find me in app/views/public/orders/new.html.erb</p>

<% form_with model: @order do |f| %>
  <p>注文情報入力</p>

  <p>支払方法</p>
  <%= f.redio_button :method_payment, Order.method_payments.key(0) %>
  <%= f.lebel :method_payment_credit_card, Order.method_payments_i18n[:credit_card] %>

  <%= f.redio_button :method_payment, Order.method_payments.key(1) %>
  <%= f.lebel :method_payment_transfer, Order.method_payments_i18n[:transfer] %>

  <p>お届け先</p>
  <%= f.redio_button :select_address, 0 %>
  <%= f.lebel :select_address, "ご自身の住所"  %>
  <%= f.customer.postal_code %>
  <%= f.customer.address %>
  <%= f.customer.name %>

  <%= f.redio_button :select_address, 1 %>
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
  <%= f.lebel :select_address, "登録済住所から選択" %>

  <%= f.redio_button :select_address, 2 %>
  <%= f.lebel :select_address, "新しいお届け先" %>
  <%= f.text_field :postal_code %>
  <%= f.text_field :postal_address %>
  <%= f.text_field :postal_name %>


  <p>確認画面へ進む</p>