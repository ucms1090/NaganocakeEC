<div class="container">

  <div class="row py-4">
    <h2 class="section-ttl">商品一覧 (全<%= @count_items.count %>件)</h2>
  </div>

  <div class="row">

    <div class="col-lg-2">

      <table class="table" border="1">
          <tr>
            <th>ジャンル検索</th>
          </tr>

          <tr>
            <td>
              <% @genres.each do |genre| %>
              <%=link_to genre.name, root_path %><br>
              <% end %>
              </td>
          </tr>
      </table>

    </div>

    <div class="col-lg-10">
      <div class="row">
        <% @items.each do |item| %>
        <div class="col-lg-4">
          <%= link_to image_tag(item.get_item_image(300,150)), item_path(item.id) %>
          <p><%= item.name %></p>
          <p><%= item.price %>円</p>
        </div>
        <% end %>
      </div>
    </div>

  </div>

  <%= paginate @items %>

</div>
