<div class="container">
  <div class="row justify-content-between py-4">
    <div class="col-4">
      <h4>ショッピングカート</h4>
    </div>
    <div class="col-4">
      <%= link_to cart_items_destroy_all_path, method: :delete do %>
        <button class="btn btn-danger">カートを空にする</button>
      <% end %>
    </div>
  </div>

  <div class="row py-5">
    <div class="col-8 mw-100">
      <table class="table" border="1">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
            <% @total += cart_item.subtotal %>
            <td>
              <%= link_to cart_item_path(cart_item.id), method: :delete do %>
                <button class="btn btn-danger" >削除する</button>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row py-2">
    <div class="col-8"></div>
    <div class="col-4">
      <table class="table" border="1">
        <tr>
          <th>合計金額</th>
          <td><%= @total %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row py-2">
    <%= link_to items_path do %>
      <button class="btn btn-primary">買い物を続ける</button>
    <% end %>
  </div>

  <div class="row py-2">
    <%= link_to new_order_path do %>
      <button class="btn btn-success">情報入力に進む</button>
    <% end %>
  </div>

</div>





