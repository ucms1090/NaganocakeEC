<div class="container">

  <div class="row m-3">
    <h4>新規会員登録</h4>
  </div>

  <div class="form-horizontal m-3" role="form">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group">
        <div class="form-inline">
          <div class="col-lg-3">
            <%= f.label :last_name, '姓', class:'control-label' %>
          </div>
          <div class="col-lg-4">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %>
          </div>
          <div class="col-lg-1">
            <%= f.label :first_name, '名', class:'control-label' %>
          </div>
          <div class="col-lg-4">
            <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "道子" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <div class="col-lg-3">
            <%= f.label :last_name_kana, 'セイ', class:'control-label' %>
          </div>
          <div class="col-lg-4">
            <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "レイワ" %>
          </div>
          <div class="col-lg-1">
            <%= f.label :first_name_kana, 'メイ', class:'control-label' %>
          </div>
          <div class="col-lg-4">
            <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "ミチコ" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <div class="col-lg-3">
            <%= f.label :email, 'メールアドレス', class:'control-label' %>
          </div>
          <div class="col-lg-4">
            <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %>
          </div>
          <div class="col-lg-1">

          </div>
          <div class="col-lg-4">

          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <div class="col-lg-3">
            <%= f.label :postal_code, '郵便番号（ハイフンなし）', class:'control-label' %>
          </div>
          <div class="col-lg-4">
            <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "000000" %>
          </div>
          <div class="col-lg-1">

          </div>
          <div class="col-lg-4">

          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <div class="col-lg-3">
            <%= f.label :address, '住所', class:'control-label' %>
          </div>
          <div class="col-lg-9">
            <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町０−０" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <div class="col-lg-3">
            <%= f.label :telephone_number, '電話番号（ハイフンなし）', class:'control-label' %>
          </div>
          <div class="col-lg-4">
            <%= f.text_field :telephone_number, autocomplete: "telephone_number", placeholder: "00000000000" %>
          </div>
          <div class="col-lg-1">

          </div>
          <div class="col-lg-4">

          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <div class="col-lg-3">
            <%= f.label :password, 'パスワード（６文字以上）', class:'control-label' %>
          </div>
          <div class="col-lg-4">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <div class="col-lg-3">
            <%= f.label :password_confirmation, 'パスワード（確認用）', class:'control-label' %>
          </div>
          <div class="col-lg-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="col-lg-1">

          </div>
          <div class="col-lg-4">

          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <div class="col-lg-3">

          </div>
          <div class="col-lg-4">
            <%= f.submit "新規登録", class:'btn btn-success' %>
          </div>
          <div class="col-lg-1">

          </div>
          <div class="col-lg-4">

          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <h4>既に登録済みの方</h4>
  </div>

　<div class="row">
　  <%= link_to 'こちら', new_customer_session_path %>　からログインしてください。
　</div>
</div>